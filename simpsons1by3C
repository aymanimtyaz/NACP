#include <stdio.h>
#include <conio.h>
int main()
{
    printf("f(x)=1/(1+x)\n");
    printf("from 0 to 1\n");
    float l=0; float u=1; float h=0.25; float steps=(u-l)/h;
    float integral=0; float j=0;
    for(int i=0; i<=steps; i++)
    {
        if(i==0||i==steps)
        integral+=1/(1+j);
        else
        if(i%2==0)
        integral+=2*(1/(1+j));
        else
        integral+=4*(1/(1+j));
        j+=h;
    }
    integral*=(h/3);
    printf("integral is %f\n", integral);
    return(0);
}
